doi = {10.1080/14763141.2018.1480728},
file = {:C$\backslash$:/Users/cwiens/Box Sync/Articles/Basketball/Nakano et al{\_}2018{\_}The effect of increased shooting distance on energy flow in basketball jump shot.pdf:pdf},
