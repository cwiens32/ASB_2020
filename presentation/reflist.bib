doi = {10.1080/02640419308729998},
file = {:C$\backslash$:/Users/cwiens/Box Sync/Articles/USC/Basketball FT/Miller {\&} Bartlett{\_}1993{\_}The effects of increased shooting distance in the basketball jump shot.pdf:pdf},
issn = {1466447X},
journal = {Journal of Sports Sciences},
keywords = {Basketball,Biomechanics,Jump shot},
month = {aug},
number = {4},
pages = {285--293},
title = {{The effects of increased shooting distance in the basketball jump shot}},
